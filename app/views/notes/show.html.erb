<%= provide(:title,"Note一覧") %>
<div class="container">
    <ul class="notes">
      <% @notes.each do |note| %>
      <li id="note-<%= note.id %>">
        <div class="post-area">
          <h6><%= link_to note.user.name, note.user %></h6>
          <div class="media ">
            <div class="media-body">
              <h5 class="mt-0 mb-1"><%= link_to note.title, controller: 'notes',action: 'post_notes', id: note.id %></h5>
              <div class="post-content-area">
              <%= note.content.gsub(/<img(.+?)>/i,"").html_safe %>
              </div>
            </div>
          </div>
          <div class="row justify-content-between post-info">
            <div class="col-4">Posted <%= time_ago_in_words(note.created_at) %> ago.</div>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
    <%= will_paginate @notes %>
</div>